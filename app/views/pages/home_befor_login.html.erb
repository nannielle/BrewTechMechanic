<!-- app/views/pages/home_before_login.html.erb -->
<% if user_signed_in? %>
  <!-- If the user is signed in, display a "Log Out" button -->
  <%= link_to 'Log Out', destroy_user_session_path, data: {turbo_method: :delete} %>
<% else %>
  <!-- If the user is not signed in, display "Sign In" and "Sign Up" buttons -->
  <%= link_to 'Sign In', new_user_session_path %>
  <%= link_to 'Sign Up', new_user_registration_path %>
<% end %>
