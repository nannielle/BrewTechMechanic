<!-- Contact Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" role="dialog" aria-labelledby="contactModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="contactModalLabel">We will be happy to assist you! Please fill out the form:</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: manufacture_contact_path, method: :post, local: true) do |form| %>
          <div class="mb-3">
            <%= form.label :preferred_language, 'Preferred language:' %>
            <%= form.text_field :preferred_language, class: 'form-control', required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :contact_time, 'Please select the most suitable time for a call or to send a message:' %>
            <%= form.datetime_select :contact_time, class: 'form-control', required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :contact_method, 'Please choose social media for contact:' %>
            <%= form.select :contact_method, ['WhatsApp', 'Telegram', 'Phone Call'], {}, {class: 'form-control', required: true} %>
          </div>

          <div class="mb-3">
            <%= form.label :message, 'Please type your message here:' %>
            <%= form.text_field :message, class: 'form-control', rows: 9, required: true %>
          </div>

          <div class="modal-footer">
            <%= form.submit "Send", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
