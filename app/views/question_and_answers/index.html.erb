<div class="QandA-container">
<h1 style="text-align:center;">Here you can find answers to the most common questions:</h1>

<div class="row justify-content-center ">
  <div class="col-sm-4 mt-5  ">
    <%= form_with url: question_and_answers_path, method: :get, class: "d-flex search-box-QandA" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control ",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>



<div><%=  @search_word %></div>





<div class="flex-container mt-5">
  <ul>
    <% @questions.each do |question| %>
      <div class="row question-answer">
        <div class="col-2"></div>
        <div class="col-3 question">
          <h3><%= question.question %></h3>
        </div>
        <div class="col-1 line-container">
           <div class="qa-line"></div>
           <i class="fa-solid fa-hammer icon-qa"></i>

        </div>
        <div class="col-3 answer ">
          <p><%= question.answer %></p>
        </div>
      </div>
    <% end %>
  </ul>
</div>



</div>
